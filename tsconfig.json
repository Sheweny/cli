{
  "compilerOptions": {
    "lib": ["ESnext"],
    "target": "ESnext",
    "module": "es2022",
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
